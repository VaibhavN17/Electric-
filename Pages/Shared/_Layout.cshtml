<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Electric__</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Electric__.styles.css" asp-append-version="true" />
    <style>
        /* Custom Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Header Styling */
        header {
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #007bff !important;
        }

        .navbar-nav .nav-link {
            margin-right: 15px;
            color: #333 !important;
        }

        .navbar-nav .nav-link:hover {
            color: #007bff !important;
        }

        /* Footer Styling */
        footer {
            background-color: #333;
            color: #fff;
            padding: 40px 0;
        }

        .footer-links a {
            color: #fff;
            text-decoration: none;
            display: block;
            margin: 5px 0;
            transition: color 0.3s;
        }

        .footer-links a:hover {
            color: #007bff;
        }

        .social-icons a {
            color: #fff;
            margin: 0 10px;
            font-size: 1.2rem;
            transition: color 0.3s;
        }

        .social-icons a:hover {
            color: #007bff;
        }

        .footer-bottom {
            margin-top: 20px;
            text-align: center;
            border-top: 1px solid #444;
            padding-top: 10px;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Electric__</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Contact">Contact</a>
                        </li>
                        <!-- Dropdown Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                More
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-page="/Blog">Blog</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Careers">Careers</a></li>
                            </ul>
                        </li>
                    </ul>
                    <!-- Social Media Links -->
                    <div class="social-icons ms-3">
                        <a href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
                        <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="py-5">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <!-- Footer Section 1 -->
                <div class="col-md-3">
                    <h5>About Electric__</h5>
                    <p>Your trusted solution for all electrical services and solutions.</p>
                </div>
                <!-- Footer Section 2 -->
                <div class="col-md-3 footer-links">
                    <h5>Quick Links</h5>
                    <a asp-page="/Index">Home</a>
                    <a asp-page="/About">About Us</a>
                    <a asp-page="/Services">Services</a>
                    <a asp-page="/Contact">Contact</a>
                </div>
                <!-- Footer Section 3 -->
                <div class="col-md-3 footer-links">
                    <h5>Resources</h5>
                    <a asp-page="/Blog">Blog</a>
                    <a asp-page="/Careers">Careers</a>
                    <a asp-page="/Privacy">Privacy Policy</a>
                    <a asp-page="/Terms">Terms of Service</a>
                </div>
                <!-- Footer Section 4 -->
                <div class="col-md-3">
                    <h5>Contact Us</h5>
                    <p>Email: info@electric.com</p>
                    <p>Phone: +123-456-7890</p>
                    <p>Address: 123 Main Street, City, Country</p>
                </div>
            </div>
            <!-- Footer Bottom -->
            <div class="footer-bottom">
                <p>&copy; 2024 Electric__ | All Rights Reserved</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
