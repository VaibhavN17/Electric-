@page
@model Electric__.Pages.User.UserResisterModel
@{
    ViewData["Title"] = "User Registration";
}

<div class="container mt-5">
    <h3 class="text-primary">Register</h3>
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input asp-for="Input.Username" class="form-control" placeholder="Enter your username" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Enter your email" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Register</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info mt-3">@Model.Message</div>
    }
</div>
